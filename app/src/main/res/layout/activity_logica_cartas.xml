<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogicaCartasActivity">
    <Button
        android:id="@+id/atras"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="atras"/>

    <TextView
        android:id="@+id/Recuerdin"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/atras"
        app:layout_constraintEnd_toEndOf="@+id/vertical_60"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:text="Recuerdin"
        android:textSize="34dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/vertical_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:background="@color/black"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="vertical"/>

    <ImageButton
        android:id="@+id/Pos_00"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"

        app:layout_constraintTop_toBottomOf="@+id/Recuerdin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Pos_01"/>

    <ImageButton
        android:id="@+id/Pos_01"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@+id/Pos_00"
        app:layout_constraintStart_toEndOf="@id/Pos_00"
        app:layout_constraintEnd_toStartOf="@id/Pos_02"
        />

    <ImageButton
        android:id="@+id/Pos_02"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@+id/Pos_00"
        app:layout_constraintStart_toEndOf="@id/Pos_01"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageButton
        android:id="@+id/Pos_10"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/Pos_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Pos_11"/>

    <ImageButton
        android:id="@+id/Pos_11"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@+id/Pos_10"
        app:layout_constraintStart_toEndOf="@id/Pos_10"
        app:layout_constraintEnd_toStartOf="@id/Pos_12"
        />

    <ImageButton
        android:id="@+id/Pos_12"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@+id/Pos_10"
        app:layout_constraintStart_toEndOf="@id/Pos_11"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>